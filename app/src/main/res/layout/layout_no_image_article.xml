<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/article_item_min_height"
    android:layout_marginLeft="@dimen/article_item_margin_left"
    android:layout_marginRight="@dimen/article_item_margin_right"
    android:layout_marginBottom="@dimen/article_item_margin_bottom"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:foreground="?android:selectableItemBackground">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/article_title_text"
                android:textSize="@dimen/article_item_text_size"
                />

    </FrameLayout>
</android.support.v7.widget.CardView>
