<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/article_item_margin_left"
    android:layout_marginRight="@dimen/article_item_margin_right"
    android:layout_marginBottom="@dimen/article_item_margin_bottom"
    android:minHeight="@dimen/article_item_min_height">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/article_item_image_height" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:textColor="@color/article_title_text"
                android:textSize="@dimen/article_item_text_size"
                />

        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>

